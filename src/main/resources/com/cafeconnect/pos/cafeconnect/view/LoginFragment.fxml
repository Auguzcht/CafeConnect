         <image>
            <Image url="@../images/BackgroundImage.png" />
         </image>
      </ImageView>
      <ImageView fx:id="image1" fitHeight="1060.0" fitWidth="780.0" layoutX="81.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Logo.png" />
         </image>
         <viewport>
            <Rectangle2D width="780.0" />
         </viewport></ImageView>
      <ImageView fx:id="LoginText" fitHeight="131.0" fitWidth="610.0" layoutX="155.0" layoutY="340.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Text.png" />
         </image>
      </ImageView>
      <ImageView fx:id="Username" fitHeight="117.0" fitWidth="658.0" layoutX="151.0" layoutY="469.0" pickOnBounds="true" preserveRatio="true">
